rules_version = '2';

// Firebase Storage Security Rules for Cashiee
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow authenticated users to upload images to their business entries
    match /businesses/{businessId}/entries/{entryId}/{imageFile} {
      // Read: Allow authenticated users to view images
      allow read: if request.auth != null;
      
      // Write: Allow authenticated users to upload images
      // Validate: Only image files, max 5MB
      allow write: if request.auth != null 
                   && request.resource.size < 5 * 1024 * 1024  // 5MB max
                   && request.resource.contentType.matches('image/.*');  // Images only
      
      // Delete: Allow authenticated users to delete images
      allow delete: if request.auth != null;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
